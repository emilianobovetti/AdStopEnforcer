{
    "manifest_version": 2,
    "name": "AdStopEnforcer",
    "short_name": "ASE",
    "version": "0.4.0",

    "description": "Prevent boring messages like \"disable your ad-blocker and refresh page to continue\"",
    "homepage_url": "https://github.com/emilianobovetti/AdStopEnforcer",
    "author": "Emiliano Bovetti",
    "icons": {
        "16": "icons/logo-16.png",
        "38": "icons/logo-38.png",
        "48": "icons/logo-48.png",
        "128": "icons/logo-128.png"
    },

    "content_scripts": [
        {
            "run_at": "document_start",
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "engine/script.js",
                "engine/inject.js",
                "engine/test.js"
            ]
        }
    ],

    "background": {
        "scripts": [
            "background/message_listener.js"
        ]
    },

    "browser_action": {
        "default_icon": { "38": "icons/logo-38.png" },
        "default_title": "AdStopEnforcer",
        "default_popup": "popup/mode_select.html"
    }
}
